    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="clr-namespace:OnlyR"
    xmlns:volumeMeter="clr-namespace:OnlyR.VolumeMeter">

    <Style x:Key="LevelRectStyle" TargetType="{x:Type Rectangle}">
        <Setter Property="Margin" Value="0,2,0,0" />
    </Style>

    <Style x:Key="RedLevelRectStyle" TargetType="{x:Type Rectangle}" BasedOn="{StaticResource LevelRectStyle}">
        <Setter Property="Fill" Value="Red" />
    </Style>

    <Style x:Key="YellowLevelRectStyle" TargetType="{x:Type Rectangle}" BasedOn="{StaticResource LevelRectStyle}">
        <Setter Property="Fill" Value="Yellow" />
    </Style>

    <Style x:Key="GreenLevelRectStyle" TargetType="{x:Type Rectangle}" BasedOn="{StaticResource LevelRectStyle}">
        <Setter Property="Fill" Value="GreenYellow" />
    </Style>


    <Style TargetType="{x:Type volumeMeter:VduControl}">
